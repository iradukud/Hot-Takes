<%- include('partials/header') -%>

<main class="container">
  <div class="px-4 py-5 my-5 text-center">
    
    <%# alert section %>
    <section class="container">
    <%
    //error alerts 
    if (locals.messages.errors) { %> <% messages.errors.forEach( el => { 
    %>
    <%# each alert %>
    <div class="row justify-content-center">
    <div class="alert alert-danger col-4"><%= el.msg %></div>
    </div>
    <% 
        }) 
    } 
    //information alerts
    if (locals.messages.info) { 
        messages.info.forEach( el => { 
    %>
    <%# each alert %>
    <div class="row justify-content-center">
    <div class="alert alert-info col-4"><%= el.msg %></div>
    </div>
    <%
        })  
    } 
    %>
    </section>

    <%# hero logo %>
    <img class="d-block mx-auto mb-4" src="/imgs/hot_takes-hero-logo.png" alt="" width="72" height="100%">
    <%# Title title %>
    <h1 class="display-5 fw-bold">Hot Takes</h1>
    <div class="col-lg-6 mx-auto">
      <%# hero text %>
      <p class="lead mb-4">
        Share your spicies takes and see what other user's think.
      </p>
      <%# login and signup modal triggers %>
      <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
        <button type="button" id="login" class="btn btn-primary btn-lg px-4 gap-3" data-toggle="modal" data-target="#loginModal">Login</button>
        <button type="button" id="signup" class="btn btn-outline-secondary btn-lg px-4" data-toggle="modal" data-target="#signupModal">Signup</button>
      </div>
    </div>
  </div>
</main>


<%# load auth modals partial %>
<%- include('partials/modals/auth') -%>

<%# load basic site scripts %>
<%- include('partials/scripts') -%>

<%# load scripts related login & signups (auth) %>
<script src="/js/auth.js"></script>

<%# load footer partial %>
<%- include('partials/footer') -%>