<%# post modal %>
<div class="modal fade" id="postModal" tabindex="-1" role="dialog" aria-labelledby="postModalTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <%# modal title %>
        <h5 class="modal-title" id="postModalTitle"></h5>
        <%# close modal %>
        <button type="button" class="btn btn-secondary fa fa-window-close close" data-dismiss="modal" aria-label="close"></button>
      </div>

      <%# post form %>
      <form action="" id="postForm" enctype="multipart/form-data" method="POST">
        <div class="d-flex modal-body">
          <%# user profile image %>
          <div class="flex-column">
            <img src="<%= currentUser['profileImage'] %>" alt="user profile" width="32" height="32" class="rounded-circle me-2">
          </div>
          <div class="flex-column">
            <textarea name="post" id="editPost" class="post" cols="50" rows="3" placeholder="What's your take?" value=""></textarea>
            <input type="hidden" name="user" value="<%= currentUser['_id'] %>">
            
              <%# post image %>
              <div class="text-center my-3">
                <label for="file-input" class="fa fa-file-image" width="35">--Post Image</label>
                <input type="file" id="file-input" name="postImage" class="inputImage">
              </div>
            </div>
        </div>

        <%# form buttons %>
        <div class="modal-footer">
          <%# close modal %>
          <button type="button" class="btn btn-secondary close" data-dismiss="modal">Cancel</button>
          <%# login buttons %>
          <button type="submit" class="btn btn-primary" value="Upload">Take</button>
        </div>
      
      </form>

    </div>
  </div>
</div>