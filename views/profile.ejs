<%- include('partials/header') -%>

<div class="d-flex flex-nowrap">
  <%# load desktop sidebar modals partial %>
  <%- include('partials/sidebar') -%>

  <%# main section of the page %>
  <main class="d-flex flex-column col-sm-3 mx-3 ">
    <h1 class="text-center">Profile</h1>

    <div class="d-flex d-flex justify-content-around border-bottom mb-4 pb-3">

      <div class="flex-column">
        <img src="<%=profile['profileImage'] %>" alt="user profile" width="60" height="60" class="rounded-circle me-2">
        <%# user name %>
        <span class="d-block"><strong><%= profile['userName'] %></strong></span>
        <%# user handle %>
        <span class="d-block mb-1">@<%= profile['userHandle'] %></span>
      </div>

      <div>
        
        <%if(profile['_id'].toString().trim() != profile['_id'].toString().trim()){%>
          
          <i class="fa fa-envelope "></i>
          <button class="btnSub">Follow</button>
        
          <%}%>

        </div>
    
    </div>

    <%if(posts.length){%>

    <section class="d-flex flex-column align-items-center">
      <div class="row col-10">

        <%posts.forEach(post=>{%>

        <%# container for each post %>
        <div class="d-flex mb-3">
          <%# user profile image %>
          <div class="flex-column">
            <img src="<%=post['postUser']['profileImage'] %>" alt="user profile" width="60" height="60" class="rounded-circle me-2">
          </div>

          <%# post text %>
          <div class="flex-column w-100">
            <%# user name %>
            <span><strong><%= post['postUser']['userName'] %></strong></span>

            <%# user handle %>
            <span class="mb-1">@<%= post['postUser']['userHandle'] %></span>

            <%# post text %>
            <p id="postContent" class="text-wrap"><%= post['post'] %></p>

            <%# post image image %>
            <div class="d-flex justify-content-center border-bottom mb-1 pb-1">

              <%if(post['image']){%>

              <img src="<%= post['image']%>" alt="" width="200" height="100%">

              <%}%>

            </div>
              
              <%# post icons %>
              <div class="d-flex justify-content-around align-items-center">

                <%# if owner of post, show edit and delete buttons  %>
                <%if(post['user'].toString().trim() == currentUser['_id'].toString().trim()){%>

                <button class="btn fas fa-edit editPostTrigger <%=post['_id']%>"></button>
                <form action="/post/deletePost?_method=delete" method="POST">
                  <input type="hidden" name="postId" value="<%= post['_id'] %>" />
                  <button type="sumbit" class="btn fa fa-trash py-0 %>"></button>
                </form>

                <%}%>

                <%# like and comment buttons %>
                <div>
                  <button class="btn fa fa-comments px-0 py-0 commentTrigger <%=post['_id']%>"></button>
                  <span><%= post['comments'].length %></span>
                </div>
                <div class="d-flex">
                  <form action="/post/like" method="POST">
                    <input type="hidden" name="postId" value="<%= post['_id'] %>" />
                    <input type="hidden" name="user" value="<%= currentUser['_id'] %>" />
                    <button type="sumbit" class="btn fa fa-fire px-1 py-0 %>"></button>
                  </form>
                  <span><%= post['likes'].length %></span>
                </div>

              </div>
            </div>
          </div>

          <%})%>

        </div>
    </section>

    <%}%>
  
  </main>



</div>

<%# load comment modal %>
    <%- include('partials/modals/comment') -%>

    <%# load comment modal %>
    <%- include('partials/modals/post') -%>

    <%# load basic site scripts %>
    <%- include('partials/scripts') -%>

    <%# load footer partial %>
    <%- include('partials/footer') -%>