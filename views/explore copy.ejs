<%- include('partials/header') -%>

<div class="d-flex flex-nowrap">
  <%# load desktop sidebar modals partial %>
  <%- include('partials/sidebar') -%>

  <%# main section of the page %>
  <main class="d-flex flex-column col-sm-3 mx-3 ">
    <h1 class="text-center">Explore</h1>
    <form action="" id="searchForm" class="col-12 col-lg-auto mb-3 mb-lg-0" method="POST">
      <input type="search" class="form-control" placeholder="Search..." aria-label="Search" name="search">
      <div class="my-2">
        <button type="sumbit" id="searchUsers" class="btnSub">Users</button>
        <button type="sumbit" id="searchPosts" class="btnSub">Takes</button>
      </div>
    </form>

    <% 
    //search results for users
    if(typeof searchUsers != 'undefined') {
      searchUsers.forEach((user)=>{
    %>

    <%# container for user %>
    <div class="d-flex mb-3">
      <%# user profile image %>
      <div class="flex-column">
        <img src="<%= user['profileImage'] %>" alt="user profile" width="60" height="60" class="rounded-circle me-2">
      </div>

      <%# user details %>
      <div class="flex-column">
        <div>
          <%# user name %>
          <span><strong><%= user['userName'] %></strong></span>
          <%# user handle %>
          <span>@<%= user['userHandle'] %></span>
        </div>
        <%# follow/unfollow button %>
        <button class="btnSub">FOLLOW</button>
      </div>
    </div>

    <%
      })
    } 

    if(typeof searchPosts != 'undefined') {
      searchPosts.forEach(post=>{  
    %>

    <div class="d-flex mb-3">
      <%# user profile image %>
      <div class="flex-column">
        <img src="<%=searchPosts[i]['postUser']['profileImage'] %>" alt="user profile" width="60" height="60" class="rounded-circle me-2">
      </div>

      <%# post text %>
      <div class="flex-column w-100">
        <%# user name %>
        <span><strong><%= searchPosts[i]['postUser']['userName'] %></strong></span>

        <%# user handle %>
        <span class="mb-1">@<%= searchPosts[i]['postUser']['userHandle'] %></span>

        <%# post text %>
        <p class="text-wrap"><%= searchPosts[i]['post'] %></p>

        <%# post image image %>
        <div class="d-flex justify-content-center border-bottom mb-1 pb-1">

          <%if(searchPosts[i]['image']){%>

          <img src="<%= searchPosts[i]['image']%>" alt="" width="100" height="100%" />

          <% } %>

        </div>
      </div>
    </div>

    <%
      })  
    }
    %>

  </main>

  <div class="d-flex flex-column mt-3 mx-1">
    <h6 class="text-center">Trending</h6>
    <div class="row col-10">
     
      <%for(i=0;i<posts.length;i++){%>

      <%# container for each post %>
      <div class="d-flex mb-3">
        <%# user profile image %>
        <div class="flex-column">
          <img src="<%=posts[i]['postUser']['profileImage'] %>" alt="user profile" width="60" height="60" class="rounded-circle me-2">
        </div>

        <%# post text %>
        <div class="flex-column w-100">
          <%# user name %>
          <span><strong><%= posts[i]['postUser']['userName'] %></strong></span>

          <%# user handle %>
          <span class="mb-1">@<%= posts[i]['postUser']['userHandle'] %></span>

          <%# post text %>
          <p id="postContent" class="text-wrap"><%= posts[i]['post'] %></p>


          <%# post icons %>
          <div class="d-flex justify-content-around align-items-center">
            <%# like and comment buttons %>
            <div>
              <button class="btn fa fa-comments px-0 py-0 commentTrigger <%=posts[i]['_id']%>"></button>
              <span><%= posts[i]['comments'].length %></span>
            </div>

            <div class="d-flex">
              <form action="/post/like" method="POST">
                <input type="hidden" name="postId" value="<%= posts[i]['_id'] %>" />
                <input type="hidden" name="user" value="<%= currentUser['_id'] %>" />
                <button type="sumbit" class="btn fa fa-fire px-1 py-0 %>"></button>
              </form>
              <span><%= posts[i]['likes'].length %></span>
            </div>
          </div>
        </div>
      </div>

      <%}%>

    </div>

  </div>

  <%# load comment modal %>
      <%- include('partials/modals/comment') -%>

      <%# load comment modal %>
      <%- include('partials/modals/post') -%>

      <%# load basic site scripts %>
      <%- include('partials/scripts') -%>

      <%# load footer partial %>
      <%- include('partials/footer') -%>